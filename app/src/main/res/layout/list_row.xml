<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#0C1960">

    <TextView
        android:id="@+id/list_number"
        android:layout_width="82dp"
        android:layout_height="90dp"
        android:fontFamily="@font/bangers"
        android:text="1."
        android:textColor="#FFC107"
        android:textSize="50sp" />

    <TextView
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="-3dp"
        android:layout_toRightOf="@+id/list_number"
        android:fontFamily="@font/antic"
        android:textColor="#FFFFFF"
        android:text="Name"
        android:textSize="25sp"
        android:id="@+id/list_name"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="-186dp"
        android:layout_toLeftOf="@+id/list_number"
        android:text="Country"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/list_name"
        android:id="@+id/list_country"/>

    <TextView
        android:layout_width="111dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="13dp"
        android:layout_marginRight="5dp"
        android:fontFamily="@font/bangers"
        android:text="9850"
        android:textColor="#FFC107"
        android:textSize="40sp"
        android:id="@+id/list_points"/>
</RelativeLayout>