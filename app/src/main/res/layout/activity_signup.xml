<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Signup"
    android:background="#0C1960"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="112dp"
        android:layout_margin="30dp"
        android:layout_alignParentTop="true"
        android:transitionName="logotxt"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/bungee_inline"
        android:padding="20dp"
        android:text="Sign Up"
        android:textColor="#FFC107"
        android:textSize="40sp" />

    <EditText
        android:id="@+id/inputNickname"
        android:textSize="20sp"
        android:layout_margin="15dp"
        android:hint="Nickname"
        android:layout_gravity="center_horizontal"
        android:drawablePadding="5dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#66FFFFFF"
        android:fontFamily="@font/antic"
        android:drawableLeft="@drawable/ic_person"
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:background="@drawable/custom_edit_text"
        android:inputType="textPersonName"/>

    <EditText
        android:id="@+id/inputEmail"
        android:textSize="20sp"
        android:hint="E-mail address"
        android:layout_gravity="center_horizontal"
        android:drawablePadding="5dp"
        android:layout_margin="15dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#66FFFFFF"
        android:fontFamily="@font/antic"
        android:drawableLeft="@drawable/ic_email"
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:background="@drawable/custom_edit_text"
        android:inputType="textPersonName"/>

    <com.hbb20.CountryCodePicker
        android:id="@+id/inputCountry"
        android:layout_margin="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="35dp"
        android:layout_width="250dp"
        app:ccp_autoDetectCountry="true"
        app:ccp_showFlag="true"
        app:ccp_showNameCode="false"
        app:ccp_showFullName="true"
        app:ccp_showPhoneCode="false"
        android:background="@drawable/custom_edit_text"
        app:ccpDialog_textColor="#ffffff"
        app:ccp_arrowColor="#ffffff"
        app:ccp_contentColor="#ffffff"
        app:ccp_textSize="15sp"
        app:ccp_useFlagEmoji="true"
        app:ccpDialog_backgroundColor="#0C1960"
        app:ccpDialog_fastScroller_bubbleColor="#FF9800"
        app:ccpDialog_fastScroller_handleColor="#FFC107"
        app:ccp_clickable="true">
    </com.hbb20.CountryCodePicker>


    <EditText
        android:id="@+id/inputPassword"
        android:textSize="20sp"
        android:layout_margin="15dp"
        android:drawablePadding="5dp"
        android:hint="Password"
        android:textColorHint="#66FFFFFF"
        android:drawableLeft="@drawable/ic_pass"
        android:layout_gravity="center_horizontal"
        android:textColor="#FFFFFF"
        android:background="@drawable/custom_edit_text"
        android:fontFamily="@font/antic"
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:inputType="textPassword" />
    <EditText
        android:id="@+id/confPassword"
        android:textSize="20sp"
        android:layout_margin="15dp"
        android:drawablePadding="5dp"
        android:hint="Confirm password"
        android:textColorHint="#66FFFFFF"
        android:drawableLeft="@drawable/ic_pass"
        android:layout_gravity="center_horizontal"
        android:textColor="#FFFFFF"
        android:background="@drawable/custom_edit_text"
        android:fontFamily="@font/antic"
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:inputType="textPassword" />
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:visibility="invisible"
        />
    <Button
        android:id="@+id/registerButton"
        android:layout_width="150dp"
        android:layout_marginTop="20dp"
        android:text="Register"
        android:fontFamily="@font/bungee_inline"
        android:textColor="#FFC107"
        android:layout_height="wrap_content"
        android:background="@drawable/button_back"
        android:textSize="17sp"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>